<?xml version="1.0" encoding="UTF-8" ?>
    <!-- $Id$ -->
<project name="FileUploadServlet" default="archive" basedir=".">
    <property name="src" location="src" />
    <property name="build" location="classes" />
    <property name="lib" value="lib" />
    <property name="archive" value="uploadservlet.jar" />
    <path id="depend">
        <fileset dir="${lib}">
            <include name="**/*.jar" />
        </fileset>
    </path>
    <target name="check-env">
        <tstamp />
        <fail unless="PROJECTHOME"></fail>
    </target>
    <target name="init" depends="check-env">
        <mkdir dir="${build}" />
    </target>
    <target name="clean">
        <delete file="${archive}" />
        <delete dir="${build}" />
    </target>
    <target name="compile" depends="init">
        <javac srcdir="${src}" destdir="${build}">
            <classpath refid="depend" />
        </javac>
    </target>
    <target name="resource">
        <copy todir="${build}">
            <fileset dir="${src}">
                <exclude name="**/*.java" />
            </fileset>
        </copy>
    </target>
    <target name="archive" depends="compile,resource">
        <jar jarfile="${archive}">
            <fileset dir="${build}" />
        </jar>
    </target>

</project>
    <!-- EOF: $RCSfile$ -->
