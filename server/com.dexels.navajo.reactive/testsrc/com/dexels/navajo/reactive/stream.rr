topic('sportlinkkernel-PERSON')	
	->publish('@PERSON')
    ->set(updateby=null,lastupdate=null)
topic('sportlinkkernel-PERSONADDRESS')
    ->set(updateby=null,lastupdate=null)
	->groupReplace('addressid')
	->publish('@GROUPEDADDRESS')
	->join('sportlinkkernel-ADDRESS')
	->groupBy('personid')
	->join([sportlinkPerson],into='Address',optional=true)
	->publish('@PERSONREHASHED')
	->flattenToFirst('Address','AddressSingle')