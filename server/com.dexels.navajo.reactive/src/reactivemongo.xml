		<msg.joinsingle.msg >
			<source.mongo.msg resource="dummy" collection="Club" operation="find" single="OrganizationSub">
				<param name="query">{_id:"?"}</param>
				<param.eval>[_id]</param.eval>
			</source.mongo.msg>
			<copyAll to="'OrganizationSub'"/>
		</msg.joinsingle.msg>
		<msg.csv.binary outputBinary="CSVBinary" useHeaders="true">
			<param.eval>"Name"</param.eval>
			<param.eval>"ShortName"</param.eval>
		</msg.csv.binary>		
		<binary.sftp.msg host="127.0.0.1" username="bla" password="bla" file="test.csv" inputBinary="CSVBinary" single="Result"/>
	</source.mongo.msg>
</reactive>
