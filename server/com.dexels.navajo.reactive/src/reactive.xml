<reactive array="Organization">
	<source.sql datasource="dummy">
		<param name="query">select * from ORGANIZATION WHERE ROWNUM &lt;=3</param>
		<delete key="SHORTNAME,UPDATEBY,REMARKS"/>
		<mergeSingle>
			<source.sql datasource="dummy" single="OrganizationAttribute">
				<param name="query">select * from ORGANIZATIONATTRIBUTE WHERE ORGANIZATIONID = ?  AND ROWNUM &lt;=3</param>
				<evalparam>[ORGANIZATIONID]</evalparam>
				<reduce>
					<set key="'ATTRIBNAME'" value="ToLower([ATTRIBVALUE])" to="[ATTRIBNAME]"/>
				</reduce>
			</source.sql>
			<copyAll to="'Attributes'"/>
		</mergeSingle>
	</source.sql>
</reactive>