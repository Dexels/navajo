<?xml version="1.0" encoding="UTF-8" ?>
<!-- $Id$ -->
<project name="NavajoClient" default="archive" basedir=".">
  <property name="src" location="src" />
  <property name="build" location="classes" />
  <property name="lib" value="lib" />
  <property name="archive" value="${ant.project.name}.jar" />
  <property name="NavajoDocument" value="${PROJECTHOME}/NavajoDocument" />
  <property name="NavajoDocument.build" value="${NavajoDocument}/classes" />
  <path id="depend">
    <fileset dir="${lib}">
      <include name="**/*.jar" />
    </fileset>
    <pathelement location="${NavajoDocument.build}" />
  </path>
  <target name="init">
    <tstamp />
    <mkdir dir="${build}" />
  </target>
  <target name="clean">
    <delete file="${archive}" />
    <delete dir="${NavajoDocument.build}" />
    <delete dir="${build}" />
  </target>
  <target name="resource">
    <copy todir="${build}">
      <fileset dir="${src}">
        <exclude name="**/*.java"/>
      </fileset>
    </copy>
  </target>
  <target name="NavajoDocument" depends="init">
    <ant dir="${NavajoDocument}" target="compile" inheritAll="false"/>
  </target>
  <target name="compile" depends="NavajoDocument">
    <javac srcdir="${src}" destdir="${build}">
      <classpath refid="depend" />
    </javac>
  </target>
  <target name="archive" depends="resource,compile">
    <jar jarfile="${archive}" basedir="${build}" />
  </target>
</project>
