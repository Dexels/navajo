<?xml version="1.0" encoding="UTF-8" ?>
<!-- $Id$ -->
<project name="NavajoRemoteTestLibrary" default="archive" basedir=".">
  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="lib" value="lib"/>
  <property name="archive" value="${ant.project.name}.jar"/>
  <path id="depend">
    <fileset dir="${lib}">
      <include name="**/*.jar"/>
    </fileset>
    <pathelement location="${NavajoDocument.build}"/>
    <pathelement location="${DexelsVersionControl.build}"/>
  </path>
  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>
  <target name="clean">
    <delete file="${archive}"/>
    <delete dir="${NavajoDocument.build}"/>
    <delete dir="${build}"/>
  </target>
  <target name="resource">
    <copy todir="${build}">
      <fileset dir="${src}">
        <exclude name="**/*.java"/>
      </fileset>
    </copy>
  </target>
  <target name="compile" >
    <javac srcdir="${src}" destdir="${build}">
      <classpath refid="depend"/>
    </javac>
  </target>
  <target name="archive" depends="resource,compile">
    <jar jarfile="${archive}">
      <fileset dir="${build}"/>
    </jar>
  </target>
</project>
