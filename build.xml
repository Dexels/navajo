<?xml version="1.0" encoding="UTF-8" ?>
<!-- $Id$ -->
<project name="Navajo" default="archive" basedir=".">
	<property name="src" location="src" />
	<property name="build" location="classes" />
	<property name="lib" value="lib" />
	<property name="log" value="log" />
	<property name="archive" value="${ant.project.name}.jar" />
	<property name="NavajoLogger" value="${PROJECTHOME}/NavajoLogger" />
	<property name="NavajoLogger.build" value="${NavajoLogger}/classes" />
	<property name="NavajoClient" value="${PROJECTHOME}/NavajoClient" />
	<property name="NavajoClient.build" value="${NavajoClient}/classes" />
	<property name="NavajoClient.src" value="${NavajoClient}/src" />
	<property name="NavajoDocument" value="${PROJECTHOME}/NavajoDocument" />
	<property name="NavajoDocument.build" value="${NavajoDocument}/classes" />
	<path id="depend">
		<fileset dir="${lib}">
			<include name="**/*.jar" />
		</fileset>
		<pathelement location="${NavajoClient.build}" />
		<pathelement location="${NavajoDocument.build}" />
		<pathelement location="${NavajoLogger.build}" />
	</path>
	<target name="check-env">
		<fail unless="PROJECTHOME">  
      Set the PROJECTHOME environment variable to the top directory of
      your CVS projects, for example:

      export PROJECTHOME=C:\PROJECTS

      declare -x PROJECTHOME=/home/arjen/las-projectas 
    </fail>
	</target>
	<target name="init" depends="check-env">
		<tstamp />
		<mkdir dir="${NavajoLogger.build}" />
		<mkdir dir="${NavajoDocument.build}" />
		<mkdir dir="${NavajoClient.build}" />
		<mkdir dir="${build}" />
	</target>
	<target name="clean" depends="check-env">
		<delete file="${archive}" />
		<delete dir="${NavajoLogger.build}" />
		<delete dir="${NavajoDocument.build}" />
		<delete dir="${NavajoClient.build}" />
		<delete dir="${build}" />
	</target>
	<target name="compile" depends="init,NavajoLogger,NavajoClient">
		<javac srcdir="${src}" destdir="${build}">
			<classpath refid="depend" />
		</javac>
	</target>
	<target name="NavajoLogger" depends="init">
		<ant dir="${NavajoLogger}" target="compile" inheritAll="false" />
	</target>
	<target name="NavajoClient" depends="init">
		<!-- NavajoClient sub-project should build NavajoDocument sub-project if necessary -->
		<ant dir="${NavajoClient}" target="compile" inheritAll="false">
			<property name="PROJECTHOME" value="${PROJECTHOME}" />
		</ant>
	</target>
	<target name="archive" depends="compile">
		<jar jarfile="${archive}" basedir="${build}" />
	</target>
</project>
