<project name="NavajoGeoTools" default="archive" basedir=".">
	<property name="src" location="src"/>
	<property name="build" location="classes"/>
	<property name="archive" location="${ant.project.name}.jar"/>
	
	<target name="init">
		<tstamp/>
		<mkdir dir="${build}"/>
	</target>
	<target name="clean">
		<delete dir="${build}"/>
	</target>
	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${build}">
		</javac>
	</target>
	<target name="archive" depends="compile">
		<jar jarfile="${archive}">
			<fileset dir="${build}"/>
		</jar>
		
	</target>
</project>
