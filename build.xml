<?xml version="1.0" encoding="UTF-8" ?>
<!-- $Id$ -->
<project name="TipiBuildLibrary" default="publish" basedir=".">
    <property name="src" location="src"/>
    <property name="build" location="bin"/>
    <property name="lib" value="lib"/>
    <property name="archive" value="${ant.project.name}.jar"/>
    <target name="compile" >
        <javac srcdir="${src}" destdir="${build}">
            <classpath refid="depend"/>
        </javac>
    </target>
    <path id="depend">
        <fileset dir="${lib}">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <target name="archive" depends="compile">
     	<jar jarfile="${archive}">
            <fileset dir="${build}">
                 <exclude name="**/*.xml"/>
               </fileset>
		</jar>    	
    </target>

    <target name="publish" depends="archive">
		<copy todir="../TipiPlugin/lib">
			<fileset dir=".">
				<include  name="${archive}"/>
			</fileset>
		</copy>
		<eclipse.refreshLocal resource="${ant.project.name}/${archive}"/>
		<eclipse.refreshLocal resource="../TipiPlugin"/>
   </target>
</project>
