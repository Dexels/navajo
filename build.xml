<?xml version="1.0" encoding="UTF-8" ?>
<!-- $Id$ -->
<project name="Navajo" default="archive" basedir=".">
  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="lib" value="lib"/>
  <property name="log" value="log"/>
  <property name="archive" value="${ant.project.name}.jar"/>
  <property name="NavajoLogger" value="${PROJECTHOME}/NavajoLogger"/>
  <property name="NavajoClient" value="${PROJECTHOME}/NavajoClient"/>
  <property name="NavajoClient.build" value="${NavajoClient}/classes"/>
  <property name="NavajoClient.src" value="${NavajoClient}/src"/>
  <property name="NavajoDocument" value="${PROJECTHOME}/NavajoDocument"/>
  <property name="NavajoDocument.build" value="${NavajoDocument}/classes"/>
  <property name="NavajoDocument.lib" value="${NavajoDocument}/lib"/>
  <property name="NavajoDocument.src" value="${NavajoDocument}/src"/>
  <property name="Servlet.archive" value="${Navajo}/lib/servlet.jar"/>
  <path id="NavajoClient.depend">
    <pathelement location="${NavajoDocument.build}"/>
    <pathelement location="${lib}/servlet.jar"/>
  </path>
  <path id="Navajo.depend">
    <fileset dir="${lib}">
      <include name="**/*.jar"/>
    </fileset>
    <pathelement location="${NavajoClient.build}"/>
    <pathelement location="${NavajoDocument}/jaxpimpl.jar"/>
    <pathelement location="${NavajoLogger}/NavajoLogger.jar"/>
  </path>
  <target name="archive" depends="compile">
    <jar jarfile="${archive}" basedir="${build}"/>
  </target>
  <target name="init">
    <tstamp/>
    <mkdir dir="${NavajoDocument.build}"/>
    <mkdir dir="${NavajoClient.build}"/>
    <mkdir dir="${build}"/>
    <mkdir dir="${log}"/>
  </target>
  <target name="clean">
    <delete dir="${NavajoDocument.build}"/>
    <delete dir="${NavajoClient.build}"/>
    <delete dir="${build}"/>
    <delete dir="${log}"/>
  </target>
  <target name="compile" depends="init,NavajoClient">
    <javac srcdir="${src}" destdir="${build}">
      <classpath refid="Navajo.depend"/>
    </javac>
  </target>
  <target name="NavajoDocument" depends="init">
    <javac srcdir="${NavajoDocument.src}" destdir="${NavajoDocument.build}">
      <classpath>
        <fileset dir="${NavajoDocument.lib}">
          <include name="**/*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>
  <target name="NavajoClient" depends="NavajoDocument">
    <javac srcdir="${NavajoClient.src}" destdir="${NavajoClient.build}">
      <classpath refid="NavajoClient.depend"/>
    </javac>
  </target>
</project>
