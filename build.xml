<?xml version="1.0" encoding="UTF-8" ?>
<!-- $Id$ -->
<project name="TipiCharting" default="proxyarchive" basedir=".">
	<property name="src" location="src" />
	<property name="dist" location="dist"/>
	<property name="build" location="classes" />
	<property name="lib" value="lib" />
	<property name="archive" value="${ant.project.name}.jar" />
	<property name="proxyarchive" value="SwingMain.jar" />
	<property name="NavajoTipi" value="${PROJECTHOME}/NavajoTipi" />
	<property name="NavajoTipi.build" value="${NavajoTipi}/classes" />
	<property name="DexelsVersionControl" value="${PROJECTHOME}/DexelsVersionControl" />
	<property name="DexelsVersionControl.build" value="${PROJECTHOME}/DexelsVersionControl/classes" />
	<path id="depend">
		<!-- NavajoSwingTipi needs the libraries from the NavajoTipi project, OK? -->
		<!--<fileset dir="${NavajoTipi}/lib">
			<include name="**/*.jar"/>
		</fileset>-->
		<pathelement location="${NavajoTipi.build}" />
		<pathelement location="${DexelsVersionControl.build}" />
	</path>
	<target name="init" >
		<tstamp />
		<mkdir dir="${NavajoTipi.build}" />
		<mkdir dir="${build}" />
	</target>
	<target name="clean" >
		<delete file="${archive}" />
		<delete dir="${NavajoTipi.build}" />
		<delete dir="${build}" />
	    <delete dir="${dist}"/>
	</target>
	<target name="NavajoTipi" depends="init">		
	</target>
	<target name="resource">
		<copy todir="${build}">
			<fileset dir="${src}">
				<exclude name="**/*.java" />
				<exclude name="CVS" />
			</fileset>
		</copy>
	</target>
	<target name="compile" depends="NavajoTipi">
		<javac srcdir="${src}" destdir="${build}">
			<classpath refid="depend" />
		</javac>
	</target>
	<target name="archive" depends="compile,resource">
		<jar jarfile="${archive}">

			<fileset dir="${build}" />
			<fileset dir="${DexelsVersionControl.build}" />
			<service type="tipi.TipiExtension">
				<provider classname="tipi.TipiSwingExtension" />
			</service>
			<manifest>
				<attribute name="Built-By" value="Frank" />
<!--				<attribute name="Class-Path" value="NavajoSwingTipi.jar,tipipackage.jar,NavajoRuntime.jar,NavajoSwingClient.jar,NavajoLogger.jar,NavajoDocument.jar" />
-->				<attribute name="Main-Class" value="tipi.MainApplication" />
			</manifest>

		</jar>
	</target>
	<target name="proxyarchive" depends="archive">
		<jar jarfile="${proxyarchive}">
			<fileset dir="${build}">
				<exclude name="com/**" />
				<include name="tipi/MainApplication.class" />
			</fileset>
			<manifest>
				<attribute name="Built-By" value="Frank" />
				<attribute name="Main-Class" value="tipi.MainApplication" />
			</manifest>
		</jar>
	</target>
</project>
<!-- EOF: $RCSfile$ -->
