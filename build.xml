		<copy file="${temp.folder}/bin/.bin${logExtension}" todir="${destination.temp.folder}/com.dexels.plugin_0.98.5/" failonerror="false" overwrite="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: com.dexels.plugin of all the zips, jars and logs created.">
		<delete dir="${build.result.folder}/bin/"/>
		<delete file="${build.result.folder}/bin.src.zip"/>
		<delete file="${plugin.destination}/com.dexels.plugin_0.98.5.jar"/>
		<delete file="${plugin.destination}/com.dexels.plugin_0.98.5.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="C:/projecten/NavajoScriptPlugin" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: com.dexels.plugin.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
