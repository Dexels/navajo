		<copy file="TipiVaadin.war" tofile="${deployPath}/knhb#test#oao.war" />
		<copy file="TipiVaadin.war" tofile="${deployPath}/knkv#test#oao.war" />

				<delete verbose="true" dir="/Users/frank/Desktop/dump8/eclipse">
		</delete>-->
	</target>


</project>