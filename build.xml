<?xml version="1.0" encoding="UTF-8" ?>
<!-- $Id$ -->
<project name="Navajo" default="archive" basedir=".">
	<property name="src" location="src" />
	<property name="build" location="classes" />
	<property name="log" value="log" />
	<property name="cvs.release.arg" value="-A" />
	<condition property="cvs.release.arg" value="-r ${VERSION}">
		<isset property="${VERSION}" />
	</condition>
	<property name="DexelsVersionControl" value="${PROJECTHOME}/DexelsVersionControl" />
	<property name="DexelsVersionControl.build" value="${PROJECTHOME}/DexelsVersionControl/classes" />
	<!--<property name="archive" value="${ant.project.name}.jar" />-->
	<property name="NavajoLogger" value="${PROJECTHOME}/NavajoLogger" />
	<property name="NavajoLogger.build" value="${NavajoLogger}/classes" />
	<available file="${NavajoLogger}" type="dir" property="NavajoLogger.present" />
	<property name="NavajoClient" value="${PROJECTHOME}/NavajoClient" />
	<property name="NavajoClient.build" value="${NavajoClient}/classes" />
	<available file="${NavajoClient}" type="dir" property="NavajoClient.present" />
	<property name="NavajoDocument" value="${PROJECTHOME}/NavajoDocument" />
	<property name="NavajoDocument.build" value="${NavajoDocument}/classes" />
	<available file="${NavajoDocument}" type="dir" property="NavajoDocument.present" />
	<path id="depend">

		<pathelement location="${NavajoClient.build}" />
		<pathelement location="${NavajoDocument.build}" />
		<pathelement location="${NavajoLogger.build}" />
		<pathelement location="${DexelsVersionControl.build}" />
	</path>
	<target name="resource">
		<copy todir="${build}">
			<fileset dir="${src}">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>
	<target name="check-env">
		<tstamp />
		<fail unless="PROJECTHOME"> Set the PROJECTHOME environment variable to the top directory of your CVS projects,
			for example: export PROJECTHOME=C:\PROJECTS declare -x PROJECTHOME=/home/arjen/las-projectas </fail>
	</target>
	<target name="checkout.NavajoLogger" depends="check-env" unless="NavajoLogger.present">
		<cvs package="NavajoLogger" dest="${PROJECTHOME}" />
	</target>
	<target name="checkout.NavajoClient" depends="check-env" unless="NavajoClient.present">
		<cvs package="NavajoClient" dest="${PROJECTHOME}" />
	</target>
	<target name="checkout.NavajoDocument" depends="check-env" unless="NavajoDocument.present">
		<cvs package="NavajoDocument" dest="${PROJECTHOME}" />
	</target>
	<target name="checkout" depends="check-env,checkout.NavajoLogger,checkout.NavajoClient,checkout.NavajoDocument" />
	<target name="init" depends="checkout">
		<mkdir dir="${NavajoLogger.build}" />
		<mkdir dir="${NavajoDocument.build}" />
		<mkdir dir="${NavajoClient.build}" />
		<mkdir dir="${build}" />
	</target>
	<target name="clean" depends="check-env">
		<delete file="NavajoRuntime.jar" />
		<delete file="NavajoEnterprise.jar" />
		<delete file="NavajoServer.jar" />
		<delete dir="${NavajoLogger.build}" />
		<delete dir="${NavajoDocument.build}" />
		<delete dir="${NavajoClient.build}" />
		<delete dir="${build}" />
	</target>
	<target name="compile" depends="init,NavajoLogger,NavajoClient">
		<javac srcdir="${src}" destdir="${build}">
			<classpath refid="depend" />
		</javac>
	</target>
	<target name="NavajoLogger" depends="init">
		<ant dir="${NavajoLogger}" target="compile" inheritAll="false" />
	</target>
	<target name="NavajoClient" depends="init">
		<!-- NavajoClient sub-project should build NavajoDocument sub-project if necessary -->
		<ant dir="${NavajoClient}" target="compile" inheritAll="false">
			<property name="PROJECTHOME" value="${PROJECTHOME}" />
		</ant>
	</target>

	<target name="archive" depends="compile,resource,core,enterprise,server" />


	<target name="core" depends="compile,resource">
		<jar jarfile="NavajoRuntime.jar">
			<fileset dir="${build}">
				<include name="**/*" />

				<!-- enterprise -->
				<exclude name="com/dexels/navajo/scheduler/**" />
			    <exclude name="com/dexels/navajo/tribe/**" />
			    <exclude name="com/dexels/navajo/workflow/**" />
				<exclude name="com/dexels/navajo/adapter/**" />
				<exclude name="com/dexels/navajo/integrity/**" />
				<exclude name="com/dexels/navajo/jabber/**" />
				<exclude name="com/dexels/navajo/server/descriptionprovider/**" />
				<exclude name="com/dexels/navajo/server/statistics/**" />
			    <exclude name="com/dexels/navajo/server/enterprise/**" />

				<!-- server -->


				<exclude name="com/dexels/navajo/server/Dispatcher.*" />
				<exclude name="com/dexels/navajo/server/NavajoConfig.*" />
				<exclude name="com/dexels/navajo/server/Access.*" />
			    <exclude name="com/dexels/navajo/lockguard/**" />
			    <exclude name="com/dexels/navajo/server/jmx/**" />
				<exclude name="com/dexels/navajo/client/**" />
				<exclude name="com/dexels/navajo/install/**" />
				<exclude name="com/dexels/navajo/compiler/**" />
				<exclude name="com/dexels/navajo/mapping/compiler/**" />
				<exclude name="org/**" />

				<!-- source file, never needed. -->
				<exclude name="**/*.jj" />
				<exclude name="**/*.jjt" />
				<exclude name="**/*.bat" />

			</fileset>
			<fileset dir="${DexelsVersionControl.build}" />
		</jar>
	</target>

	<target name="enterprise" depends="compile,resource">
		<jar jarfile="NavajoEnterprise.jar">
			<fileset dir="${build}">
				<include name="com/dexels/navajo/scheduler/**" />
			    <include name="com/dexels/navajo/workflow/**" />
			    <include name="com/dexels/navajo/tribe/**" />
				<include name="com/dexels/navajo/adapter/**" />
				<include name="com/dexels/navajo/integrity/**" />
				<include name="com/dexels/navajo/jabber/**" />
				<include name="com/dexels/navajo/server/descriptionprovider/**" />
				<include name="com/dexels/navajo/server/statistics/**" />
				<!-- source file, never needed. -->
				<exclude name="**/*.jj" />
				<exclude name="**/*.jjt" />
				<exclude name="**/*.bat" />
			</fileset>
			<fileset dir="${DexelsVersionControl.build}" />
		</jar>
	</target>

	<target name="server" depends="compile,resource">
		<jar jarfile="NavajoServer.jar">
			<fileset dir="${build}">

				<include name="com/dexels/navajo/client/**" />
				<include name="com/dexels/navajo/install/**" />
				<include name="com/dexels/navajo/mapping/compiler/**" />
				<include name="com/dexels/navajo/compiler/**" />
			    <include name="com/dexels/navajo/lockguard/**" />
			    <include name="com/dexels/navajo/server/jmx/**" />
			    <include name="com/dexels/navajo/server/enterprise/**" />
				<include name="org/**" />
				
				<include name="com/dexels/navajo/server/Dispatcher.*" />
				<include name="com/dexels/navajo/server/NavajoConfig.*" />
				<include name="com/dexels/navajo/server/Access.*" />
				
				<!-- source file, never needed. -->
				<exclude name="**/*.jj" />
				<exclude name="**/*.jjt" />
				<exclude name="**/*.bat" />

			</fileset>
			<fileset dir="${DexelsVersionControl.build}" />
		</jar>
	</target>


</project>
<!-- EOF: $RCSfile$ -->
