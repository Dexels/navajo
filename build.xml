			<fileset dir="src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: com.dexels.plugin.">
		<available property="bin/" file="${build.result.folder}/bin/"/>
		<antcall target="bin/"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="bin.src.zip" file="${build.result.folder}/bin.src.zip"/>
		<antcall target="bin.src.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/com.dexels.plugin_0.98.5"/>
		<copy todir="${destination.temp.folder}/com.dexels.plugin_0.98.5" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}" includes="bin//"			/>
		</copy>
		<copy todir="${destination.temp.folder}/com.dexels.plugin_0.98.5" failonerror="true" overwrite="false">
			<fileset dir="${basedir}" includes="plugin.xml,icons/,lib/,build.properties,bin/"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
