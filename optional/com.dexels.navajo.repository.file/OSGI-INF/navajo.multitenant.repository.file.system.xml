<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" deactivate="deactivate"  name="navajo.multitenant.repository.file.system" immediate="true">
   <implementation class="com.dexels.navajo.repository.file.impl.MultitenantSystemPropertyFileRepositoryInstanceImpl"/>
   <service>
      <provide interface="com.dexels.navajo.repository.api.RepositoryInstance"/>
   </service>
   <reference bind="setEventAdmin" cardinality="0..1" interface="org.osgi.service.event.EventAdmin" name="EventAdmin" policy="dynamic" unbind="clearEventAdmin"/>
   <reference bind="addOperation" cardinality="0..n" interface="com.dexels.navajo.repository.api.AppStoreOperation" name="AppStoreOperation" policy="dynamic" unbind="removeOperation"/>
   <reference target="(name=multitenant)" bind="addRepositoryLayout" cardinality="1..n" interface="com.dexels.navajo.repository.api.diff.RepositoryLayout" name="RepositoryLayout" policy="dynamic" unbind="removeRepositoryLayout"/>
   <property name="repo" type="String" value="file"/>
   <property name="type" type="String" value="multitenant"/>
</scr:component>
