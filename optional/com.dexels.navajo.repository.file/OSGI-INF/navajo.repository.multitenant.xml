<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" deactivate="deactivate"  name="navajo.repository.multitenant" immediate="true" configuration-policy="require">
   <implementation class="com.dexels.navajo.repository.file.impl.FileRepositoryInstanceImpl"/>
   <service>
      <provide interface="com.dexels.navajo.repository.api.RepositoryInstance"/>
   </service>
   <reference bind="setEventAdmin" cardinality="0..1" interface="org.osgi.service.event.EventAdmin" name="EventAdmin" policy="dynamic" unbind="clearEventAdmin"/>
   <reference bind="addOperation" cardinality="0..n" interface="com.dexels.navajo.repository.api.AppStoreOperation" name="AppStoreOperation" policy="dynamic" unbind="removeOperation" target="(|(repo=file)(!(repo=*)))"/>
   <reference bind="setRepositoryLayout" cardinality="1..1" interface="com.dexels.navajo.repository.api.diff.RepositoryLayout" name="RepositoryLayout" policy="dynamic" target="(name=multitenant)" unbind="clearRepositoryLayout"/>
   <reference bind="setConfigAdmin" cardinality="1..1" interface="org.osgi.service.cm.ConfigurationAdmin" name="ConfigurationAdmin" policy="dynamic" unbind="clearConfigAdmin"/>
   <property name="repo" type="String" value="file"/>
</scr:component>
