<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>Navajo</groupId>
	<artifactId>Document</artifactId>
	<packaging>jar</packaging>
	<version>0.0.2-SNAPSHOT</version>
	<name>Document</name>
	<url>http://maven.apache.org</url>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>Navajo</groupId>
			<artifactId>DexelsVersionControl</artifactId>
			<version>0.0.2</version>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<scriptSourceDirectory>scripts</scriptSourceDirectory>
		<testSourceDirectory>testsrc</testSourceDirectory>
		<resources>
			<resource>
				<filtering>false</filtering>
				<directory>src</directory>
				<includes>
					<include>**</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	  <scm>
    <connection>scm:cvs:pserver:frank@spiritus.dexels.nl:/home/cvs:Document</connection>
    <developerConnection>scm:cvs:pserver:frank@spiritus.dexels.nl:/home/cvs:Document</developerConnection>
    <url>http://127.0.0.1/websvn/my-project</url>
  </scm>
	<distributionManagement>
		<repository>
			<id>Navajo</id>
			<name>Navajo Nexus</name>
			<url>scp://navajo@spiritus.dexels.nl:/home/navajo/Dexels</url>
		</repository>
  <!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>NavajoSnapshot</id>
			<name>Navajo Nexus</name>
			<url>scp://navajo@spiritus.dexels.nl:/home/navajo/DexelsSnapshot</url>
		</snapshotRepository>
	</distributionManagement>
</project>