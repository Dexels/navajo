<?xml version="1.0" encoding="UTF-8"?>
<tsl xmlns="http://www.dexels.com/navascript" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dexels.com/navascript http://mail.dexels.com:8080/schema/navascript.xsd">
    <methods>
        <method name="navajo/ProcessBroadcastMessage">
            <required message="Broadcast"/>
        </method>
    </methods>
    <map object="com.dexels.navajo.adapter.BroadcastMap">
        <field name="message">
            <expression value="[/Broadcast/Message]"/>
        </field>
        <field name="recipientExpression">
            <expression value="'aap'"/>
        </field>

        <field name="timeToLive">
            <expression value="[/Broadcast/Time]"/>
        </field>
    </map>
    <message name="Broadcast">
        <property name="Message" direction="in" type="string" length="80">
            <expression value="[/Broadcast/Message]"/>
        </property>
        <property name="Time" direction="in" type="integer" length="80">
            <expression value="[/Broadcast/Time]"/>            
        </property>
    </message>    
</tsl>
