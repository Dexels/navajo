<?xml version="1.0" encoding="UTF-8"?>
<tsl xmlns="http://www.dexels.com/navascript" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dexels.com/navascript http://www.dexels.nl:8080/schema/navascript.xsd">
    <message name="Killed" type="array">
        <map object="com.dexels.navajo.adapter.AdminMap">
            <field name="asyncThreads">
                <map ref="/NavajoStatus/Kernel/Users" filter="[Kill] == true OR [Interrupt] == true OR [Resume] == true">
                    <field name="pointer">
                        <expression value="[AccessId]"/>
                    </field>
                    <field name="kill" condition="[Kill] == true">
                        <expression value="true"/>
                    </field>
                    <field name="interrupt" condition="[Interrupt] == true">
                        <expression value="true"/>
                    </field>
                    <field name="resume" condition="[Resume] == true">
                        <expression value="true"/>
                    </field>
                    <message name="Updated">
                        <property name="Id" direction="out">
                            <expression value="[AccessId]"/>
                        </property>
                        <property name="Action" direction="out">
                            <expression value="'killed'" condition="[Kill] == true"/>
                            <expression value="'interrupted'" condition="[Interrupt] == true"/>
                            <expression value="'resumed'"/>
                        </property>
                    </message>
                </map>
            </field>
        </map>
    </message>
</tsl>
