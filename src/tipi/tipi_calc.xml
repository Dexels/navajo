<tid errorhandler="error">
  <tipi-include location="classdef.xml"/>
  <screen-instance name="init" fullscreen="true" title="Welcome to tipi-calc"/>

  <tipi name="init" class="screen">
    <tipi-instance name="desktop" class="desktop">
      <tipi-instance name="mainFrame" id="mainFrame" visible="true" closable="true" resizable="true"/>
    </tipi-instance>
  </tipi>


  <tipi name="mainFrame" class="window" w="640" h="480" x="100" y="100" title="Enter your navajo expression:" service="InitUpdateMember">
    <layout type="border">
        <tipi-instance name="browserbar" class="tipi" constraint="north" border="1">
          <layout type="border">
            <component-instance class="label" text="NavajoExpression:" name="l" constraint="west"/>
            <component-instance class="textfield" text="?[/QueryUpdateMember/MemberIdentifier]" name="expression" constraint="center"/>
            <component-instance class="button" text="Go!" name="go" constraint="east">
              <event type="onActionPerformed">
                <action type="evaluate">
                  <param name="from_path" value="../expression"/>
                  <param name="from_name" value="text"/>
                  <param name="to_path" value="../../result"/>
                  <param name="to_name" value="text"/>
                </action>
              </event>
            </component-instance>
          </layout>
        </tipi-instance>
            <component-instance class="textarea" text="result" name="result" constraint="center"/>
           <component-instance class="button" text="Get the message" name="msgbutton" constraint="south">
                <event type="onActionPerformed">
       <action type="callService" >
        <param name="service" value="InitUpdateMember"/>
      </action>
              </event>
           </component-instance>
       </layout>
  </tipi>

</tid>
