<tid errorhandler="error">
  <tipi decorated="false" class="dialog" title="'Disclaimer'" name="disclaimer" h="550" w="500" closable="false" modal="true">
    <layout type="table">
      <tr weighty="1">
        <td>
          <!-- *** This url must be changed to reflect either a relative or a resource location *** -->
           <component-instance class="browser" id="helpBrowser" url="{url:/file:c:/vladb/gebruikersvoorwaarden.html}"/>
        </td>
      </tr>
      <tr weighty="0">
        <td >
          <component-instance class="tipi" id="bar" border="{border:/etched}">
            <layout type="flow">
            <component-instance class="button" id="accept" text="'Accepteer overeenkomst'">
              <event type="onActionPerformed">
                <action type="performTipiMethod">
                  <param name="path" value="{tipi://init/disclaimer}"/>
                  <param name="name" value="'dispose'"/>
                </action>
                  <action type="instantiate">
                        <param name="id" value="'migrateWindow'"/>
                        <param name="name" value="'migrateWindow'"/>
                        <param name="location" value="{component://init/desktop}"/>
                        <param name="force" value="false"/>
                    </action>
                    <action type="performMethod">
                        <param name="tipipath" value="{tipi://init/desktop/query}"/>
                        <param name="method" value="'vla/InitMigrateOrganization'"/>
                    </action>
                    <action type="performTipiMethod">
                        <param name="path" value="{tipi://init/desktop/migrateWindow}"/>
                        <param name="name" value="'show'"/>
                    </action>

<!--                    <action type="performMethod">
                        <param name="tipipath" value="{tipi://init}"/>
                        <param name="method" value="'vla/InitVLAQueryMembers'"/>
                    </action>-->
              </event>
            </component-instance>
            <component-instance class="button" id="decline" text="'Weiger overeenkomst'">
              <event type="onActionPerformed">
                <action type="exit"/>
              </event>
            </component-instance>
            </layout>
          </component-instance>
        </td>
      </tr>
    </layout>
  </tipi>
</tid>
