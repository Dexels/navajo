<?xml version="1.0" encoding="UTF-8"?>
<tid errorhandler="error" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:/home/arjen/projecten/sportlink-vla/tipi/tipiscript.xsd">
    <tipi class="window" closable="true" h="454" icon="{resource:/tipi/tipi-icon-small.png}" iconifiable="false"
        maximizable="true" name="contributieProfielenFrame" resizable="true" title="'Contributie profielen'" w="800">
        <layout type="table">
            <tr>
                <td colspan="5">
                    <tipi-instance class="advancedtipitable" datamessagepath="/Profiles" deleteflag="Delete"
                        deletemethod="vla/ProcessVLAUpdateContributionProfiles"
                        initmethod="vla/ProcessVLAQueryContributionProfiles" initpath="tipi://init/desktop/query"
                        insertmethod="vla/ProcessVLAInsertContributionProfile" name="contributionTable"
                        newdatapath="/NewProfile" requiredmessage="message://init/desktop/query:.:/Club"
                        service="vla/ProcessVLAQueryContributionProfiles" updateflag="Update" updatemethod="vla/ProcessVLAUpdateContributionProfiles">
                        <column-attribute name="Status" type="rowColor">
                            <param name="gewijzigd" value="#03C32C"/>
                            <param name="aangemaakt" value="#FFAAAA"/>
                        </column-attribute>
                        <column editable="false" label="Status" name="Status"/>
                        <column editable="true" label="Profiel naam" name="Id"/>
                        <column editable="true" label="Betaalperiode" name="PeriodCode"/>
                        <column editable="true" label="Bedrag" name="Amount"/>
                    </tipi-instance>
                </td>
            </tr>
            <tr>
                <td weighty="0">
                    <component-instance class="hidden" id="hidden1"/>
                </td>
                <td weightx="0" weighty="0">
                    <component-instance class="button" icon="{resource:/tipi/add.png}">
                        <event type="onActionPerformed">
                            <action type="performTipiMethod">
                                <param name="path" value="{tipi://init/desktop/contributieProfielenFrame/contributionTable}"/>
                                <param name="name" value="'insert'"/>
                            </action>
                        </event>
                    </component-instance>
                </td>
                <td weightx="0" weighty="0">
                    <component-instance class="button" icon="{resource:/tipi/trash.png}">
                        <event type="onActionPerformed">
                            <action type="performTipiMethod">
                                <param name="path" value="{tipi://init/desktop/contributieProfielenFrame/contributionTable}"/>
                                <param name="name" value="'delete'"/>
                            </action>
                        </event>
                    </component-instance>
                </td>
                <td weightx="0" weighty="0">
                    <component-instance class="button" icon="{resource:/tipi/save.png}">
                        <event type="onActionPerformed">
                            <action type="performTipiMethod">
                                <param name="path" value="{tipi://init/desktop/contributieProfielenFrame/contributionTable}"/>
                                <param name="name" value="'update'"/>
                            </action>
                        </event>
                    </component-instance>
                </td>
                <td weightx="0" weighty="0">
                    <component-instance class="button" icon="{resource:/tipi/cancel.png}" name="AfmeldenNietOK">
                        <event type="onActionPerformed">
                            <action type="setValue">
                                <param name="to" value="{attributeref://init/desktop/contributieProfielenFrame:visible}"/>
                                <param name="from" value="false"/>
                            </action>
                        </event>
                    </component-instance>
                </td>
            </tr>
        </layout>
    </tipi>
</tid>
