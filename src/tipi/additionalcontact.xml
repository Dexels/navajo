<?xml version="1.0" encoding="UTF-8"?>
<tid errorhandler="error" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:/home/arjen/projecten/sportlink-vla/tipi/tipiscript.xsd">
    <tipi class="dialog" closable="true" h="250" icon="{resource:/tipi/tipi-icon-small.png}" iconifiable="false"
        maximizable="true" name="addAdditionalContactScreen" resizable="true"
        title="'Additionele contact gegevens'" w="500" modal="true">
        <layout type="table">
            <tr>
                <td colspan="5">
                    <tipi-instance class="advancedtipitable" datamessagepath="/AdditionalPhone"
                        deleteflag="Delete" deletemethod="vla/ProcessVLADeleteAdditionalPhones"
                        initmethod="vla/ProcessVLAQueryAdditionalPhones"
                        initpath="tipi://init/memberData"
                        insertmethod="vla/ProcessVLAInsertAdditionalPhone" name="contactTable"
                        newdatapath="/NewAdditionalPhone"
                        requiredmessage="message://init/memberData:.:/Club;message://init/memberData:.:/MemberData"
                        service="vla/ProcessVLAQueryAdditionalPhones" updateflag="Update" updatemethod="vla/ProcessVLAUpdateAdditionalPhones">
                        <column editable="true" label="telefoon/email soort" name="TelephoneType"/>
                        <column editable="true" label="telefoon nummer/email adres" name="TelephoneEmail"/>
                    </tipi-instance>
                </td>
            </tr>
            <tr>
                <td weighty="0">
                    <component-instance class="hidden" id="hidden1"/>
                </td>
                <td weightx="0" weighty="0">
                    <component-instance class="button" icon="{resource:/tipi/add.png}" tooltip="'Toevoegen rij'">
                        <event type="onActionPerformed">
                            <action type="performTipiMethod">
                                <param name="path" value="{tipi://init/desktop/addAdditionalContactScreen/contactTable}"/>
                                <param name="name" value="'insert'"/>
                            </action>
                        </event>
                    </component-instance>
                </td>
                <td weightx="0" weighty="0">
                    <component-instance class="button" icon="{resource:/tipi/trash.png}" tooltip="'Verwijderen rij'">
                        <event type="onActionPerformed">
                            <action type="performTipiMethod">
                                <param name="path" value="{tipi://init/desktop/addAdditionalContactScreen/contactTable}"/>
                                <param name="name" value="'delete'"/>
                            </action>
                        </event>
                    </component-instance>
                </td>
                <td weightx="0" weighty="0">
                    <component-instance class="button" icon="{resource:/tipi/save.png}" tooltip="'Opslaan contactgegevens'">
                        <event type="onActionPerformed">
                            <action type="performTipiMethod">
                                <param name="path" value="{tipi://init/desktop/addAdditionalContactScreen/contactTable}"/>
                                <param name="name" value="'update'"/>
                            </action>
                        </event>
                    </component-instance>
                </td>
                <td weightx="0" weighty="0">
                    <component-instance class="button" icon="{resource:/tipi/cancel.png}" tooltip="'Sluit venster'">
                        <event type="onActionPerformed">
                            <action type="performTipiMethod">
                                <param name="path" value="{tipi://init/desktop/addAdditionalContactScreen}"/>
                                <param name="name" value="'hide'"/>
                            </action>
                        </event>
                    </component-instance>
                </td>
            </tr>
        </layout>
    </tipi>
</tid>
