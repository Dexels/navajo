<tid startscreen="init" title="Welcome to tipi!">
  <!-- Screen definition -->
<screen-instance name="init"/>

<tipi name="init" type="desktop" popup="deskpopup" class="screen" menubar="mymenu">
  <tipi-instance name="tabwindow" id="InitSearchMembersWindow"/>
  <!--<tipi-instance name="initwindow" id="InitSearchMembersWindow"/>
  <tipi-instance name="pq" id="ProcessSearchMembersWindow" visible="false"/>-->
</tipi>

<tipi title="Tabbed window" name="tabwindow" x="10" y="210" w="400" h="350" class="window">
  <layout type="table">
    <tr>
      <td weightx="1" weighty="1"><tipi-instance name="initsearchmember" id="Tabs"/></td>
    </tr>
  </layout>
</tipi>

<tipi name="tabs" class="tipitabs">
   <tipi-instance name="initsearchmember" id="InitSearchMembersTipi1" title="tab1"/>
   <tipi-instance name="initsearchmember" id="InitSearchMembersTipi2" title="tab2"/>
</tipi>

<tipi title="Zoek een lid: " name="initwindow" x="10" y="10" w="500" h="150" class="window">
  <layout type="table">
    <tr>
      <td cellpadding="2" weighty="0.0"> <tipi-instance name="initsearchmembers" id="InitSearchMembersTipi"/></td>
    </tr>
  </layout>
</tipi>

<tipi title="Resultaten: " name="pq" x="10" y="210" w="400" h="350" class="window" service="ProcessSearchMembers">
  <layout type="table">
      <tr>
        <td cellpadding="2" weighty="0.0"> <tipi-instance name="pqm" id="ProcessSearchMembersTipi"/></td>
      </tr>
  </layout>
</tipi>

  <!-- Tipi definitions -->
<tipi name="initsearchmember" service="InitSearchMembers" class="tipi" prefix="/BirthDateQueryMembers" autoload="true" methodbar="true">
 <!-- <layout type="default" columns="2"/> -->
<layout type="table">
<tr>
<td>
<property name="LastName"/>
</td>
<td>
<property name="BirthDate"/>
</td>
</tr>
<tr>
<td>
<property name="SearchType"/>
</td>
<td>
<button-instance name="doSearch" value="Zoek!"/></td>
</tr>
</layout>
</tipi>

<tipi name="pqm" service="ProcessSearchMembers" messagepath="/MemberData" class="tipitable"  methodbar="true">
  <column label="Achternaam" name="LastName"/>
  <column label="Geb." name="BirthDate"/>
    <event type="onActionPerformed">
      <action type="showquestion" >
        <param name="value" value="Weet u het zeker?"/>
      </action>
      <action type="exit"/>
    </event>
    <event type="onLoad">
      <action type="setvisible">
        <param name="tipipath" value="/ProcessSearchMembersWindow"/>
        <param name="value" value="true"/>
      </action>
</event>
</tipi>

<button name="doSearch">
  <event type="onActionPerformed">
    <action type="performmethod" >
      <param name="tipipath" value="/InitSearchMembersWindow/InitSearchMembersTipi"/>
      <param name="method" value="ProcessSearchMembers"/>
    </action>
    <action type="setvisible">
      <param name="tipipath" value="/ProcessSearchMembersWindow"/>
      <param name="value" value="true"/>
    </action>
  </event>
</button>


<popup name="deskpopup">
    <menuitem name="Init">
    <event type="onActionPerformed">
      <action type="reset" >
        <param name="tipipath" value="/InitSearchMembersWindow/InitSearchMembersTipi"/>
      </action>
    </event>
    </menuitem>
    <menuitem name="Open">
    <event type="onActionPerformed">
      <action type="performmethod" >
        <param name="tipipath" value="/InitSearchMembersWindow/InitSearchMembersTipi"/>
        <param name="method" value="ProcessSearchMembers"/>
      </action>
      <action type="setvisible">
        <param name="tipipath" value="/ProcessSearchMembersWindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
    </menuitem>
    <menuitem name="Exit">
    <event type="onActionPerformed">
      <action type="showquestion" >
        <param name="value" value="Weet u het zeker?"/>
      </action>
      <action type="exit"/>
    </event>
    </menuitem>
</popup>

<menubar name="mymenu">
<menu name="file">
    <menuitem name="Init">
    <event type="onActionPerformed">
      <action type="callService" >
        <param name="service" value="InitSearchMembers"/>
      </action>
    </event>
    </menuitem>
    <menuitem name="Open">
    <event type="onActionPerformed">
      <action type="performmethod" >
        <param name="tipipath" value="/InitSearchMembersWindow/InitSearchMembersTipi"/>
        <param name="method" value="ProcessSearchMembers"/>
      </action>
      <action type="setvisible">
        <param name="tipipath" value="/ProcessSearchMembersWindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
    </menuitem>
    <menuitem name="Exit">
    <event type="onActionPerformed">
      <action type="showquestion" >
        <param name="value" value="Weet u het zeker?"/>
      </action>
      <action type="exit"/>
    </event>
    </menuitem>
</menu>
</menubar>


<tipiclass name="tipitable" class="DefaultTipiTable" package="com.dexels.navajo.tipi.impl" type="tipi"/>
<tipiclass name="tipi" class="DefaultTipi" package="com.dexels.navajo.tipi.impl" type="tipi"/>
<tipiclass name="window" class="DefaultTipiWindow" package="com.dexels.navajo.tipi.impl" type="tipi"/>
<tipiclass name="screen" class="DefaultTipiScreen" package="com.dexels.navajo.tipi.impl" type="tipi"/>
<tipiclass name="tipitabs" class="DefaultTipiTabs" package="com.dexels.navajo.tipi.impl" type="tipi"/>
<tipiclass name="table" class="DefaultTipiTableLayout" package="com.dexels.navajo.tipi.impl" type="layout"/>
<tipiclass name="default" class="DefaultColumnLayout" package="com.dexels.navajo.tipi.impl" type="layout"/>
</tid>