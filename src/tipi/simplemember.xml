<tipi name="pqm" service="ProcessSearchMembers" messagepath="/MemberData" class="tipitable">
  <column label="Achternaam" name="LastName"/>
  <column label="Geb." name="BirthDate"/>
</tipi>

   <button name="doSearch">
     <event type="onActionPerformed">
      <action type="performmethod" >
        <param name="tipipath" value="/initwindow/initsearchmember"/>
        <param name="method" value="ProcessSearchMembers"/>
      </action>
    </event>
</button>

<popup name="deskpopup">
    <menuitem name="Open">
    <event type="onActionPerformed">
      <action type="performmethod" >
        <param name="tipipath" value="/initwindow/initsearchmember"/>
        <param name="method" value="ProcessSearchMembers"/>
      </action>
    </event>
    </menuitem>
    <menuitem name="Exit">
    <event type="onActionPerformed">
      <action type="showquestion" >
        <param name="value" value="Weet u het zeker?"/>
      </action>
      <action type="exit"/>
    </event>
    </menuitem>
</popup>

<tipiclass name="tipitable" class="DefaultTipiTable" package="com.dexels.navajo.tipi.impl"/>
<tipiclass name="tipi" class="DefaultTipi" package="com.dexels.navajo.tipi.impl"/>
<tipiclass name="window" class="DefaultTipiWindow" package="com.dexels.navajo.tipi.impl"/>
<tipiclass name="screen" class="DefaultTipiScreen" package="com.dexels.navajo.tipi.impl"/>

</tid>