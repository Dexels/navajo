<tid startscreen="init" title="Welcome to tipi!">
  <!-- Screen definition -->
<screen-instance name="init" title="Welcome to tipi!" />

<tipi name="init" type="desktop" popup="deskpopup" class="screen">
  <tipi-instance name="initwindow"/>
  <tipi-instance name="pq"/>
</tipi>

<tipi title="Zoek een lid: " name="initwindow" x="10" y="10" w="500" h="150" class="window">
  <table>
    <tr>
      <td cellpadding="2" weighty="0.0"> <tipi-instance name="initsearchmember"/></td>
    </tr>
  </table>
</tipi>

<tipi title="Resultaten: " name="pq" x="10" y="210" w="200" h="150" class="window">
 <table>
      <tr>
        <td cellpadding="2" weighty="0.0"> <tipi-instance name="pqm"/></td>
      </tr>
    </table>
</tipi>

  <!-- Tipi definitions -->
<tipi name="initsearchmember" service="InitSearchMembers" class="tipi">
  <default columns="2"/>
