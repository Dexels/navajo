<tid startscreen="init" title="Welcome to tipi!">
  <!-- Screen definition -->
<screen name="init" type="desktop" popup="deskpopup">
  <window-instance name="initwindow"/>
  <window-instance name="pq"/>
</screen>

<window title="Zoek een lid: " name="initwindow" x="10" y="10" w="500" h="150">
  <table>
    <tr>
      <td cellpadding="2" weighty="0.0"> <tipi-instance name="initsearchmember"/></td>
    </tr>
  </table>
</window>

<window title="Resultaten: " name="pq" x="10" y="210" w="200" h="150">
 <table>
      <tr>
        <td cellpadding="2" weighty="0.0"> <tipi-instance name="pqm" type="tipitable"/></td>
      </tr>
    </table>
</window>

  <!-- Tipi definitions -->
<tipi name="initsearchmember" service="InitSearchMembers">
  <default columns="2"/>
