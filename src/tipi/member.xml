<tid startscreen="init">
  <!-- Screen definition -->
  <screen name="init">
    <table>
      <tr>
        <td cellpadding="2" weighty="0.0"><tipi-instance name="initquerymember"/></td>
      </tr>
      <tr>
        <td cellpadding="2" weighty="1.0"><tipi-instance name="processquerymember"/></td>
      </tr>
    </table>
  </screen>

  <!-- Tipi definitions -->
  <tipi name="initquerymember" service="InitUpdateMember">
    <table>
      <tr>
        <td>
          <container-instance name="query_container"/>
        </td>
        <td>
          <method name="ProcessQueryMember" label="Let's go!"/>
       </td>
    </tr>
    </table>
  </tipi>

  <tipi name="processquerymember" service="ProcessQueryMember">
    <table>
      <tr>
        <td><container-instance name="name_container" prefix="/MemberData"/></td>
        <td><container-instance name="date_container" prefix="/MemberData"/></td>
      </tr>
    </table>
  </tipi>

  <!-- Container definitions -->
  <container name="query_container" nr_cols="3">
    <table>
      <tr>
        <td align="right"><property name="/QueryUpdateMember/MemberIdentifier"/></td>
      </tr>
    </table>
  </container>

  <container name="name_container">
    <table>
      <tr>
        <td cellpadding="2" valign="top"><property name="FirstName"/></td>
        <td cellpadding="2" valign="center" colspan="2"><property name="Infix"/></td>
        <td cellpadding="2"><property name="LastName"/></td>
     </tr>
     <tr>
       <td cellpadding="2" align="right"><property name="BirthDate"/></td>
       <td cellpadding="2" align="center"><property name="BirthPlace"/></td>
       <td cellpadding="2" align="left"><property name="Ascription"/></td>
       <td cellpadding="2" valign="bottom"><property name="AscriptionPlace"/></td>
     </tr>
    </table>
  </container>

  <container name="date_container">
    <table>
      <tr>
        <td><property name="RegistrationDate"/></td>
     </tr>
     <tr>
       <td><property name="DeregistrationDate"/></td>
     </tr>
     <tr>
       <td><property name="DateOfPassing"/></td>
     </tr>
    </table>
  </container>

</tid>