<!-- Sportlink TIPI interface definitions -->
<tid errorhandler="error">
  <!-- Includes -->
  <tipi-include location="classdef.xml"/>
  <!-- Interface instances -->
  <screen-instance name="main" fullscreen="true" icon="tip-icon.jpg" title="Sportlink client"/>
  <!-- Interface definitions -->
  <tipi name="main" id="main" class="screen">
    <layout type="table">
      <tr>
        <td bgcolor="#213075">
          <tipi-instance name="desktop" id="desktop"/>
        </td>
      </tr>
    </layout>
  </tipi>
  <tipi name="desktop" class="desktop">
    <tipi-instance name="launchwindow" id="launchwindow" icon="tip-icon.jpg"/>
    <tipi-instance name="memberwindow" visible="false" id="memberwindow" icon="tip-icon.jpg"/>
  </tipi>
  <!-- 'launchwindow definitions -->
  <tipi name="launchwindow" class="window" h="250" w="150">
    <layout type="table">
      <tr>
        <td>
          <button-instance name="launch_member_button"/>
        </td>
      </tr>
      <tr>
        <td>
          <button-instance name="launch_nonmember_button"/>
        </td>
      </tr>
      <tr>
        <td>
          <button-instance name="launch_club_button"/>
        </td>
      </tr>
      <tr>
        <td>
          <button-instance name="launch_accommodation_button"/>
        </td>
      </tr>
      <tr>
        <td>
          <button-instance name="launch_contribution_button"/>
        </td>
      </tr>
      <tr>
        <td>
          <button-instance name="launch_clubmember_button"/>
        </td>
      </tr>
      <tr>
        <td>
          <button-instance name="launch_deregistermember_button"/>
        </td>
      </tr>
      <tr>
        <td>
          <button-instance name="launch_help_button"/>
        </td>
      </tr>
    </layout>
  </tipi>
  <button name="launch_member_button" value="KNVB-Members">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="launch_nonmember_button" value="Non-KNVB-Members">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="launch_club_button" value="Clubs">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="launch_accommodation_button" value="Accommodations">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="launch_contribution_button" value="Contributions">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="launch_clubmember_button" value="Clubmembers">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="launch_deregistermember_button" value="Deregister members">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="launch_help_button" value="Switch to VLA!">
    <event type="onActionPerformed">
      <action type="loadUI">
        <param name="file" value="vla.xml"/>
      </action>
    </event>
  </button>
  <!-- memberwindow definitions -->
  <tipi name="memberwindow" class="window" h="600" w="800" x="200" y="200" title="KNVB Members">
    <layout type="table">
      <tr>
        <td weighty="0">
          <tipi-instance name="member_query" prefix="/QueryUpdateMember" id="member_query" border="false"/>
        </td>
      </tr>
      <tr>
        <td weighty="1" colspan="2">
          <tipi-instance name="membermain" id="membermain" prefix="/MemberData"/>
        </td>
      </tr>
      <tr>
        <td>
          <tipi-instance name="memberships" id="memberships" prefix="/MemberData"/>
        </td>
        <td>
          <tipi-instance name="member_details" id="member_details" prefix="/MemberFunctions"/>
        </td>
      </tr>
      <tr>
        <td weighty="0" colspan="2">
          <tipi-instance name="member_buttonbar"/>
        </td>
      </tr>
    </layout>
  </tipi>
  <tipi name="member_query" class="tipi" service="InitUpdateMember" autoload="InitUpdateMember">
    <layout type="table">
      <tr>
        <td weighty="0">
          <property name="MemberIdentifier"/>
        </td>
        <td weighty="0"><button-instance name="query_button"/></td>
      </tr>
    </layout>
    <event type="onActionPerformed" listen="/QueryUpdateMember/MemberIdentifier">
      <action type="performMethod">
        <param name="tipipath" value="/desktop/memberwindow/memberships"/>
        <param name="method" value="ProcessGetClubMemberships"/>
      </action>
     <action type="performMethod">
        <param name="tipipath" value="/desktop/memberwindow/member_query"/>
        <param name="method" value="ProcessQueryMember"/>
      </action>
      <action type="performMethod">
        <param name="tipipath" value="/desktop/memberwindow/member_details"/>
        <param name="method" value="ProcessGetMemberFunctions"/>
      </action>
    </event>
  </tipi>

  <button name="query_button" value="Get!">
    <event type="onActionPerformed" listen="QueryUpdateMember/MemberIdentifier">
      <action type="performMethod">
        <param name="tipipath" value="/desktop/memberwindow/member_query"/>
        <param name="method" value="ProcessQueryMember"/>
      </action>
    </event>
  </button>
  <!-- member_relation_district_lastname     definitions -->
  <tipi name="membermain" class="scroll" service="InitInsertKernMember;ProcessQueryMember" autoload="InitInsertKernMember">
    <layout type="default" columns="3"/>
  </tipi>
  <!-- memberships definitions -->
  <tipi name="memberships" class="treetable" service="ProcessGetClubMemberships" messagepath="/ClubMembership">
    <column name="ClubName" label="Vereniging"/>
    <column name="GameTypeName" label="Spel type"/>
    <column name="GameDayName" label="Spel dag"/>
  </tipi>
  <!-- member_details definitions -->
  <tipi name="member_details" class="scroll" service="ProcessGetMemberFunctions">
    <layout type="table">
      <tr>
        <td weighty="0" weighx="0"><component type="label" value="Consul"/></td>
        <td weighty="0" weighx="0"><button-instance name="consul_button"/></td>
        <td rowspan="9" weightx="0"><property name="Overview"/></td>
      </tr>
      <tr>
        <td weighty="0" weighx="0"><component type="label" value="KNVB functions"/></td>
        <td weighty="0" weighx="0"><button-instance name="knvbfunctions_button"/></td>
      </tr>
      <tr>
        <td weighty="0" weighx="0"><component type="label" value="Club functions"/></td>
        <td weighty="0" weighx="0"><button-instance name="clubfunctions_button"/></td>
      </tr>
      <tr>
        <td weighty="0" weighx="0"><component type="label" value="Subscriptions"/></td>
        <td weighty="0" weighx="0"><button-instance name="subscriptions_button"/></td>
      </tr>
      <tr>
        <td weighty="0" weighx="0"><component type="label" value="Awards"/></td>
        <td weighty="0" weighx="0"><button-instance name="award_button"/></td>
      </tr>
      <tr>
        <td weighty="0" weighx="0"><component type="label" value="Certificates"/></td>
        <td weighty="0" weighx="0"><button-instance name="certificates_button"/></td>
      </tr>
      <tr>
        <td weighty="0" weighx="0"><component type="label" value="Trainer license"/></td>
        <td weighty="0" weighx="0"><button-instance name="trainerlicense_button"/></td>
      </tr>
      <tr>
        <td weighty="0" weighx="0"><component type="label" value="Club trainer"/></td>
        <td weighty="0" weighx="0"><button-instance name="clubtrainer_button"/></td>
      </tr>
      <tr>
        <td weighty="0" weighx="0"><component type="label" value="Referee"/></td>
        <td weighty="0" weighx="0"><button-instance name="referee_button"/></td>
      </tr>
    </layout>
  </tipi>

  <button name="consul_button" value=">>">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="knvbfunctions_button" value=">>">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="clubfunctions_button" value=">>">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="subscriptions_button" value=">>">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="award_button" value=">>">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="certificates_button" value=">>">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="trainerlicense_button" value=">>">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="clubtrainer_button" value=">>">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>
  <button name="referee_button" value=">>">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="true"/>
      </action>
    </event>
  </button>

  <!-- member_buttonbar definitions -->
  <tipi name="member_buttonbar" class="tipi">
    <layout type="table">
      <tr>
        <td>
          <component type="hidden"/>
        </td>
        <td weighty="0" weightx="0">
          <button-instance name="close_button"/>
        </td>
      </tr>
    </layout>
  </tipi>
  <button name="close_button" value="Close">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="false"/>
      </action>
    </event>
  </button>
</tid>
