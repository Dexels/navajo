<?xml version="1.0" encoding="UTF-8"?>
<tid errorhandler="error" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="tipiscript.xsd">
    <tipi class="dialog" closable="true" h="200" icon="{resource:/tipi/tipi-icon-small.png}" modal="true"
        name="insertFunctionWindow" service="vla/ProcessVLAQueryMemberFunctions" title="'Toevoegen Functie'" w="500"
        x="100" y="100">
        <layout type="border">
            <tipi-instance class="tipi" constraint="center" id="functionData" prefix="/NewMemberFunction" service="vla/ProcessVLAQueryMemberFunctions">
                <layout type="table">
                    <tr>
                        <td colspan="3" weighty="0">
                            <component-instance class="property" id="RegistrationDate"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3" weighty="0">
                            <component-instance class="property" id="FunctionType"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3" weighty="0">
                            <component-instance class="property" id="OrganizationName"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <component-instance class="hidden" id="h1" id="hidden1"/>
                        </td>
                    </tr>
                    <tr>
                        <td weighty="0">
                            <component-instance class="hidden" id="h2" id="hidden1"/>
                        </td>
                        <td weightx="0" weighty="0">
                            <component-instance class="button" icon="{resource:/tipi/ok.png}" id="functionAddOk" tooltip="'Invoegen functie'">
                                <event type="onActionPerformed">
                                    <action type="performTipiMethod">
                                        <param name="path" value="{tipi://init/desktop/insertFunctionWindow}"/>
                                        <param name="name" value="'hide'"/>
                                    </action>
                                    <action type="performMethod">
                                        <param name="tipipath" value="{tipi://init/desktop/insertFunctionWindow}"/>
                                        <param name="method" value="'vla/ProcessVLAInsertMemberFunction'"/>
                                    </action>
                                </event>
                            </component-instance>
                        </td>
                        <td weightx="0" weighty="0">
                            <component-instance class="button" icon="{resource:/tipi/cancel.png}" id="functionAddCancel" tooltip="'Annuleren'">
                                <event type="onActionPerformed">
                                    <action type="performTipiMethod">
                                        <param name="path" value="{tipi://init/desktop/insertFunctionWindow}"/>
                                        <param name="name" value="'dispose'"/>
                                    </action>
                                </event>
                            </component-instance>
                        </td>
                    </tr>
                </layout>
            </tipi-instance>
        </layout>
    </tipi>
</tid>
