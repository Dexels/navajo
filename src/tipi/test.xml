<!-- Sportlink TIPI interface definitions -->
<tid errorhandler="error">
  <!-- Includes -->
  <tipi-include location="classdef.xml"/>
  <!-- Interface instances -->
  <screen-instance name="main" fullscreen="true" icon="tip-icon.jpg" title="Sportlink client" menubar="mymenu" visible="true"/>
  <!-- Interface definitions -->
  <tipi name="main" class="screen">
    <layout type="table">
      <tr>
        <td bgcolor="#213000">
          <tipi-instance name="desktop" class="desktop" popup="deskpopup">
     <!--       <tipi-instance name="testwindow" visible="true" icon="tip-icon.jpg"/>-->
            <tipi-instance name="memberwindow" visible="true" icon="tip-icon.jpg"/>
            <tipi-instance name="otherwindow" visible="true" icon="tip-icon.jpg" class="window" h="200" w="200" x="200" y="200" title="Other window">
              <layout type="border">
                 <component-instance class="button" name="Noot" text="Yipee!" constraint="center" tooltip="Bladie!" background="#dd5588" foreground="#4513a8" font="Arial,60,0" border="hoooka!">
                   <event type="onActionPerformed">
                     <action type="showInfo">
                       <param name="text" value="Good morning!"/>
                     </action>
                   </event>
                 </component-instance>
              </layout>
            </tipi-instance>
          <tipi-instance name="tabwindow" id="tabwindow"  visible="true" icon="tip-icon.jpg" class="window" closable="true" maximizable="true" resizable="true" iconifiable="true" h="400" w="400" x="600" y="600" title="Please select your tipi:" >
              <layout type="border">
                 <tipi-instance class="tabs" name="tabs" constraint="center" tooltip="Bladie!" background="#dd5588" foreground="#4513a8" font="Serif,40,6" placement="left">
                  <component-instance class="label" id="Aap" constraint="Noot" icon="images.jpg"/>
                  <component-instance class="label" id="Mies" constraint="Wim" icon="tipi2.jpg"/>
                  <component-instance class="label" id="Zus" constraint="Jet" icon="tipi3.jpg"/>
                  <component-instance class="label" id="Teun" constraint="Vuur" icon="tipi4.jpg"/>
                  <component-instance class="label" id="Gijs" constraint="Lam" icon="images.jpg"/>
                  <component-instance class="label" id="Kees" constraint="Bok" icon="tipi5.jpg"/>
                  <component-instance class="label" id="Weide" constraint="Does" icon="tipi6.jpg"/>
                </tipi-instance>
              </layout>
          </tipi-instance>
          </tipi-instance>
        </td>
      </tr>
    </layout>
  </tipi>

  <tipi name="testwindow" class="window" h="300" w="300" x="500" y="500" title="Test window" closable="true" resizable="true">
    <layout type="border">
        <tipi-instance name="browserbar" class="tipi" constraint="north" border="1">
          <layout type="border">
            <component-instance class="label" text="Url (Don't forget http://):" name="urllabel" constraint="west"/>
            <component-instance class="textfield" text="" name="urlfield" constraint="center"/>
            <component-instance class="button" text="Go!" name="go" constraint="east" icon="images.jpg">
              <event type="onActionPerformed">
                <action type="copyValue">
 <!--             <param name="from_path" value="/desktop/testwindow/browserbar/urlfield"/>-->
                  <param name="from_path" value="../urlfield"/>
                  <param name="from_name" value="text"/>
                  <param name="to_path" value="../../browser"/>
                  <param name="to_name" value="url"/>
                </action>
              </event>
            </component-instance>
          </layout>
        </tipi-instance>
        <tipi-instance name="browser" class="browser" constraint="center"/>

    </layout>
  </tipi>


  <tipi name="memberwindow" class="window" h="600" w="800" x="200" y="200" title="KNVB Members" closable="true">
    <layout type="border">
          <tipi-instance name="member_query" prefix="/QueryUpdateMember" border="false" constraint="north"/>
          <tipi-instance name="membermain" prefix="/MemberData" constraint="center"/>
          <tipi-instance name="barretje"  constraint="south" orientation="vertical" class="toolbar">
            <component-instance name="aap_button"/>
            <component-instance class="button" name="Noot" text="Nootje">
    <event type="onMouseEntered">
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow/member_query/query_button"/>
        <param name="name" value="text"/>
        <param name="value" value="Aap!!!!"/>
      </action>
     </event>
    <event type="onActionPerformed">
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow/member_query/query_button"/>
        <param name="name" value="text"/>
        <param name="value" value="Aap noot mies wim zus jet teun vuur gijs lam kees bok weide does hok duif schapen"/>
      </action>
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow/barretje"/>
        <param name="name" value="orientation"/>
        <param name="value" value="horizontal"/>
      </action>
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow"/>
        <param name="name" value="x"/>
        <param name="value" value="10"/>
      </action>
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow"/>
        <param name="name" value="title"/>
        <param name="value" value="TEUN VUUR GIJS!"/>
      </action>
     </event>
</component-instance>
          </tipi-instance>
    </layout>
  </tipi>

  <component class="button" name="aap_button" text="Api!">
    <event type="onMouseEntered">
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow/member_query/query_button"/>
        <param name="name" value="text"/>
        <param name="value" value="Aap!!!!"/>
      </action>
     </event>
    <event type="onActionPerformed">
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow/member_query/query_button"/>
        <param name="name" value="text"/>
        <param name="value" value="Aap noot mies wim zus jet teun vuur gijs lam kees bok weide does hok duif schapen"/>
      </action>
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow/barretje"/>
        <param name="name" value="orientation"/>
        <param name="value" value="horizontal"/>
      </action>
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow"/>
        <param name="name" value="x"/>
        <param name="value" value="10"/>
      </action>
      <action type="setValue">
        <param name="path" value="/desktop/memberwindow"/>
        <param name="name" value="title"/>
        <param name="value" value="TEUN VUUR GIJS!"/>
      </action>
     </event>
  </component>

  <tipi name="member_query" class="tipi" service="InitUpdateMember" autoload="InitUpdateMember">
    <layout type="table">
      <tr>
        <td weighty="0">
          <component-instance name="MemberIdentifier" class="property"/>
        </td>
        <td weighty="0"><component-instance name="query_button"/></td>
      </tr>
    </layout>
<!--    <event type="onActionPerformed" listen="/QueryUpdateMember/MemberIdentifier">
     <action type="performMethod">
        <param name="tipipath" value="/desktop/memberwindow/member_query"/>
        <param name="method" value="ProcessQueryMember"/>
      </action>

    </event>
-->  </tipi>

  <component class="button" name="query_button" text="Get!">
    <event type="onActionPerformed" listen="/QueryUpdateMember/MemberIdentifier">
      <action type="performMethod">
        <param name="tipipath" value="/desktop/memberwindow/member_query"/>
        <param name="method" value="ProcessQueryMember"/>
      </action>
     </event>
  </component>
  <!-- member_relation_district_lastname     definitions -->
  <tipi name="membermain" class="scroll" service="InitInsertKernMember;ProcessQueryMember" autoload="InitInsertKernMember">
    <layout type="default" columns="3">
      <default-instance>
          <component-instance class="property"/>
      </default-instance>
    </layout>
  </tipi>
  <!-- memberships definitions -->
  <!-- member_details definitions -->
  <!-- member_buttonbar definitions -->
  <tipi name="member_buttonbar" class="tipi">
    <layout type="table">
      <tr>
        <td>
          <component class="hidden"/>
        </td>
        <td weighty="0" weightx="0">
          <component-instance name="close_button"/>
        </td>
      </tr>
    </layout>
  </tipi>
  <component class="button" name="close_button" value="Close">
    <event type="onActionPerformed">
      <action type="setVisible">
        <param name="tipipath" value="/desktop/memberwindow"/>
        <param name="value" value="false"/>
      </action>
    </event>
  </component>
<menubar name="mymenu">
<menu name="file">
    <menuitem name="Init">
    <event type="onActionPerformed">
      <action type="callService" >
        <param name="service" value="InitSearchMembers"/>
      </action>
    </event>
    </menuitem>
    <menuitem name="Open">
    <event type="onActionPerformed">
      <action type="performmethod" >
        <param name="tipipath" value="/InitSearchMembersWindow/InitSearchMembersTipi"/>
        <param name="method" value="ProcessSearchMembers"/>
      </action>
    </event>
    </menuitem>
    <menuitem name="Exit">
    <event type="onActionPerformed">
      <action type="showquestion" >
        <param name="value" value="Weet u het zeker?"/>
      </action>
      <action type="exit"/>
    </event>
    </menuitem>
</menu>
</menubar>

<popup name="deskpopup">
    <menuitem name="Init">
    <event type="onActionPerformed">
      <action type="reset" >
        <param name="tipipath" value="/InitSearchMembersWindow/InitSearchMembersTipi"/>
      </action>
    </event>
    </menuitem>
    <menuitem name="Open">
    <event type="onActionPerformed">
      <action type="instantiate">
        <param name="id" value="baggerwindow"/>
        <param name="name" value="testwindow"/>
        <param name="location" value="/desktop"/>
        <param name="visible" value="true"/>
      </action>
    </event>
    </menuitem>
    <menuitem name="Exit">
    <event type="onActionPerformed">
      <action type="showquestion" >
        <param name="value" value="Weet u het zeker?"/>
      </action>
      <action type="exit"/>
    </event>
    </menuitem>
    <menuitem name="Switch to Teun">
    <event type="onActionPerformed">
      <action type="setValue">
        <param name="path" value="/desktop/tabwindow/tabs"/>
        <param name="name" value="selected"/>
        <param name="value" value="Teun"/>
      </action>
    </event>
    </menuitem>
</popup>


</tid>
