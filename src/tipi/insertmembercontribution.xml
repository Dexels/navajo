<?xml version="1.0" encoding="UTF-8"?>
<tid xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="tipiscript.xsd" errorhandler="error">
  <tipi name="insertMemberContributionWindow" closable="true" class="dialog" modal="true" w="500" h="100" x="100" y="100" title="'Toevoegen Contributie'" icon="{resource:/tipi/tipi-icon-small.png}">
    <tipi-instance name="insertContributionDummy" h="0" class="tipi" service="vla/ProcessVLAInsertMemberContribution">
      <event type="onGeneratedErrors">
        <action type="showInfo">
          <param name="text" value="Geen beschikbare contributie profielen gevonden"/>
        </action>
      </event>
      <event type="onLoad">
        <action type="performTipiMethod">
          <param name="path" value="{tipi://init/desktop/insertMemberContributionWindow}"/>
          <param name="name" value="'hide'"/>
        </action>
        <action type="performTipiMethod">
          <param name="path" value="{tipi://init/desktop/memberFrame/tabs/contributionData/memberContributionTable}"/>
          <param name="name" value="'update'"/>
        </action>
      </event>
    </tipi-instance>
      <layout type="table">
      <tr>
      <td>
    <tipi-instance name="availableContributionData" class="tipi" visible="true" prefix="/AvailableProfiles" service="vla/InitVLAGetAvailableContributionProfiles">
      <layout type="table">
        <tr>
          <td weighty="0" colspan="3">
            <component-instance class="property" name="Profiles"/>
          </td>
        </tr>
        <tr>
          <td>
            <component-instance class="hidden" id="hidden1"/>
          </td>
        </tr>
        <tr>
          <td weighty="0">
            <component-instance class="hidden" id="hidden1"/>
          </td>
          <td weighty="0" weightx="0">
            <component-instance class="button" name="profileAddOk" icon="{resource:/tipi/ok.png}" tooltip="'Invoegen contributie'">
              <event type="onActionPerformed">
                <action type="debug">
                  <param name="value" value="'YOU CLICKED ON PROFILE ADD BUTTON!!!?!!?!?!?!?!?!?!?!!?!?!'"/>
                </action>
                <action type="performMethod">
                  <param name="tipipath" value="{tipi://init/desktop/insertMemberContributionWindow/availableContributionData}"/>
                  <param name="method" value="'vla/ProcessVLAInsertMemberContribution'"/>
                </action>
               </event>
            </component-instance>
          </td>
          <td weighty="0" weightx="0">
            <component-instance class="button" name="functionAddCancel" icon="{resource:/tipi/cancel.png}" tooltip="'Annuleren'">
              <event type="onActionPerformed">
                <action type="performTipiMethod">
                  <param name="path" value="{tipi://init/desktop/insertMemberContributionWindow}"/>
                  <param name="name" value="'hide'"/>
                </action>
              </event>
            </component-instance>
          </td>
        </tr>
      </layout>
    </tipi-instance>

</td>
</tr>
</layout>
     <event type="onLoad">
                <action type="performTipiMethod">
                  <!-- one slash too many, I think -->
                  <param name="path" value="{tipi://.}"/>
                  <param name="name" value="'show'"/>
                </action>
    </event>
 </tipi>

</tid>
