<?xml version="1.0" encoding="UTF-8" ?>

<project name="Tipi" default="publish" basedir=".">
	<property name="dist" value="dist/${ant.project.name}" />
	<!-- <property name="repository" value="http://www.navajo.nl/Tipi" /> -->
	
		
	<target name="archive">
		<ant antfile="build.xml" dir="." inheritall="true" inheritrefs="true" target="archive" />
	</target>
		
	<target name="customGrabjar" depends="cleandistribution">
		<copy todir="${dist}/lib" file="../NavajoClient/NavajoClient.jar" />
		<copy todir="${dist}/lib" file="../NavajoDocument/NavajoDocument.jar" />
		<copy todir="${dist}/lib" file="../NavajoDocument/NanoImpl.jar" />
		<copy todir="${dist}/lib" file="../NavajoFunctions/NavajoFunctions.jar" />
		<copy todir="${dist}/lib" file="../Navajo/NavajoRuntime.jar" />
		<copy todir="${dist}/lib" file="../Navajo/NavajoServer.jar" />
		<copy todir="${dist}/lib" file="../NavajoClient/NavajoClient.jar" />
		<copy todir="${dist}/lib" file="../NavajoClient/lib/jzlib.jar" />
		<copy todir="${dist}/lib" file="Tipi.jar" />
	</target>
	<target name="cleandistribution" depends="archive">
		<delete dir="dist" />
	</target>

	<target name="publish" depends="customGrabjar">
		<ant antfile="../TipiBuild/genericbuild.xml" dir="." inheritall="true" inheritrefs="true" target="publish" />
	</target>
</project>