<?xml version="1.0" encoding="UTF-8"?>
<tsl author="Arjen Schoneveld" id="euro"
  notes="Euro Calculator, supports German Marks,     French Francs, Belgium Francs and Dutch Gulders     to Euro calculations" repository="$Id$">
  <message name="apenoot">
    <property description="Geef een getal" direction="in" length="5"
      name="getal" type="float" value=""/>
  </message>
  <message name="invoer">
    <property description="Bedrag" direction="in" length="10" name="bedrag"
      type="integer" value=""/>
    <property description="Iets" direction="in" length="10" name="iets"
      type="float" value=""/>
    <property description="Product naam" direction="in" length="10"
      name="product" type="string" value=""/>
    <property cardinality="1" description="Gekozen valuta" direction="in"
      length="" name="valuta" type="selection" value="">
      <option name="euro" selected="1" value="0"/>
      <option name="gulden" selected="0" value="1"/>
      <option name="DM" selected="0" value="2"/>
      <option name="FF" selected="0" value="3"/>
      <option name="BEF" selected="0" value="4"/>
      <option name="USD" selected="0" value="5"/>
    </property>
  </message>
  <message name="aap">
    <property description="Iets" direction="in" length="10" name="martin"
      type="string" value=""/>
  </message>
  <methods>
    <method name="euro_verstuur">
      <required message="invoer"/>
    </method>
  </methods>
</tsl>
