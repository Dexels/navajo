<?xml version="1.0" encoding="UTF-8" ?>
<!-- $Id$ -->
<project name="NavajoComplete" default="compile" basedir=".">
	<property name="build" location="classes"/>
	<property name="archive" location="../NavajoComplete.jar"/>
	<property name="lib" value="3rdparty"/>
	<property name="dist" value="dist"/>
	<path id="depend">
		<fileset dir="${lib}">
			<include name="**/*.jar"/>
		</fileset>
		<pathelement location="${NavajoComplete.build}"/>
	</path>
	<target name="init">
		<tstamp/>
		<mkdir dir="${build}"/>
		<mkdir dir="${dist}"/>
	</target>
	<target name="clean">
		<delete file="${archive}"/>
		<delete dir="${NavajoComplete.build}"/>
		<delete dir="${build}"/>
		<delete dir="${dist}"/>
	</target>
	<!--<target name="resource">
		<copy includeemptydirs="false" todir="${build}">
			<fileset dir=".">
				<exclude name="**/*.java"/>
				<exclude name="**/javacc"/>
				<exclude name="**/jjtree"/>
			</fileset>
		</copy>
	</target>-->
	<target name="NavajoComplete" depends="init">
	</target>
	<target name="compile" depends="NavajoComplete" >
		<javac destdir="${build}" nowarn="true" failonerror="false">
			<src path="source/DexelsVersionControl" />
			<src path="source/Navajo" />
			<src path="source/NavajoAdapters" />
			<src path="source/NavajoClient" />
			<src path="source/NavajoDocument" />
			<src path="source/NavajoFunctions" />
			<src path="source/NavajoListeners" />
			<classpath refid="depend" />
		</javac>
	</target>

</project>
