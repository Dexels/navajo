<?xml version="1.0" encoding="UTF-8" ?>
<!-- $Id$ -->
<project name="NavajoComplete" default="NavajoComplete" basedir=".">
	<property name="build" location="classes" />
	<property name="archive" location="enterprisedist/NavajoEnterpriseExtension.jar" />
	<property name="lib" value="3rdparty" />
		<property name="enterpriselib" value="3rdparty/enterprise" />
	<property name="dist" value="dist" />
	<path id="depend">
		<fileset dir="${lib}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${enterpriselib}">
			<include name="**/*.jar" />
		</fileset>
		<pathelement location="${NavajoComplete.build}" />
	</path>
	<target name="init">
		<tstamp />
		<mkdir dir="${build}" />
		<mkdir dir="${dist}" />
	</target>
	<target name="clean">
		<delete file="${archive}" />
		<delete dir="${NavajoComplete.build}" />
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>
	<!--<target name="resource">
		<copy includeemptydirs="false" todir="${build}">
			<fileset dir=".">
				<exclude name="**/*.java"/>
				<exclude name="**/javacc"/>
				<exclude name="**/jjtree"/>
			</fileset>
		</copy>
	</target>-->

	<target name="compile">
		<javac destdir="${build}" nowarn="true" failonerror="false">
			<src path="source/DexelsVersionControl" />
			<src path="source/Navajo" />
			<src path="source/NavajoAdapters" />
			<src path="source/NavajoClient" />
			<src path="source/NavajoDocument" />
			<src path="source/NavajoFunctions" />
			<src path="source/NavajoListeners" />
			<src path="source/NavajoEnterprise" />
			<classpath refid="depend" />
		</javac>
	</target>
	<target name="NavajoComplete" depends="compile">
		<jar destfile="${archive}" basedir="classes">
		</jar>
	</target>
</project>
