    <extension point="org.eclipse.ui.decorators"> 
        <decorator
            id="com.dexels.plugin.tmldecorator" 
            label="TML Decorator" 
            state="false" 
            lightweight="true" 
            icon="icons/tml_decorator.gif" 
            location="TOP_LEFT"> 
            <enablement>
                <objectClass name="org.eclipse.core.resources.IResource"/> 
            </enablement>
        </decorator>
    </extension>
