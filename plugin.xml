<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin id="com.dexels.plugin" name="NavajoScriptPlugin Plug-in" version="0.98.99"
   provider-name="dexels" class="com.dexels.navajo.studio.script.plugin.NavajoScriptPluginPlugin">
   <runtime>
      <library name="bin/">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.jdt"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.jdt.launching"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.debug.ui"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.debug.ui"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.forms"/>
      <import plugin="NavajoPluginLibraries"/>
      <import plugin="org.eclipse.ui.ide"/>
   </requires>
     
  <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="Navajo"
            id="NavajoStudioPlugin">
      </category>
      <wizard
            name="New blank script wizard"
            icon="icons/dexels_newscript.gif"
            category="NavajoStudioPlugin"
            class="com.dexels.navajo.studio.script.plugin.wizards.NewScriptWizard"
            id="com.dexels.navajo.studio.script.plugin.wizards.NewScriptWizard">
       <description>Create a new, empty, Navajo script.</description>
      </wizard>
   </extension>
   
   <extension point="org.eclipse.ui.views">
      <category name="Navajo Script Category" id="com.dexels.plugin.views"/>

      <view name="Adapter viewer" icon="icons/dexels_adapter.gif" category="com.dexels.plugin.views"
         class="com.dexels.navajo.studio.script.plugin.views.AdapterViewer"
         id="com.dexels.AdapterViewer"/>
      <view name="Function viewer" icon="icons/dexels_function.gif" category="com.dexels.plugin.views"
         class="com.dexels.navajo.studio.script.plugin.views.FunctionViewer"
         id="com.dexels.FunctionViewer"/>
      <view name="TML viewer" icon="icons/dexels_function.gif" category="com.dexels.plugin.views"
         class="com.dexels.navajo.studio.script.plugin.views.TmlViewer"
         id="com.dexels.TmlViewer"/>
      <view name="TML browser" icon="icons/dexels_function.gif" category="com.dexels.plugin.views"
         class="com.dexels.navajo.studio.script.plugin.views.TmlBrowser"
         id="com.dexels.TmlBrowser"/>
     <view name="Tsl Metadata" icon="icons/dexels.gif" category="com.dexels.plugin.views"
         class="com.dexels.navajo.studio.script.plugin.views.MetaDataViewer"
         id="com.dexels.MetaDataViewer"/>
   </extension>
   
 
   <extension id="NavajoScriptBuilder" name="TSL Builder"
      point="org.eclipse.core.resources.builders">
      <builder hasNature="false">
         <run class="com.dexels.navajo.studio.eclipse.NavajoBuilder"/>
      </builder>
   </extension>
   <extension id="NavajoNature" name="Navajo Nature" point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="com.dexels.navajo.studio.eclipse.NavajoNature"/>
      </runtime>
      <builder id="NavajoScriptBuilder"/>
   </extension>   
   
    <extension id="actionAap" point="org.eclipse.ui.actionSets">
      <actionSet label="Navajo script" visible="true" id="com.dexels.ActionSet">
         <menu label="Navajo script" id="sampleMenu">
            <separator name="sampleGroup"/>
         </menu>
         
         
       <!-- <action label="Reload current" icon="icons/dexels.gif"  tooltip="Reload current tml" 
               class="com.dexels.navajo.studio.script.plugin.actions.NavajoReloadAction"
               id="com.dexels.plugin.reload" definitionId="com.dexels.plugin.command.reload"/>
           -->    
		<action label="Reload"
            class="com.dexels.navajo.studio.script.plugin.actions.NavajoReloadAction"
            menubarPath="sampleMenu/sampleGroup"
            id="reloadCurrent" definitionId="com.dexels.plugin.command.reload"/>
                           
       <action label="Start socketRunner"
            class="com.dexels.navajo.studio.script.plugin.actions.StartSocketRunner"
            menubarPath="sampleMenu/sampleGroup"
            id="startSocket" definitionId="com.dexels.plugin.command.socket"/>
            
       <action label="Back"
            class="com.dexels.navajo.studio.script.plugin.actions.NavajoBackAction"
            menubarPath="sampleMenu/sampleGroup"
            id="back" definitionId="com.dexels.plugin.command.back"/>

       <action label="Forward"
            class="com.dexels.navajo.studio.script.plugin.actions.NavajoForwardAction"
            menubarPath="sampleMenu/sampleGroup"
            id="forward" definitionId="com.dexels.plugin.command.forward"/>
 
            
       </actionSet>  
       
   </extension> 
	<extension point="org.eclipse.ui.commands">
		<command id="com.dexels.plugin.command.socket" name="Start socket" description="Starts the runner of the current navajo project" categoryId="org.eclipse.ui.category.views"/>
		<command id="com.dexels.plugin.command.reload" name="Reload" description="Reload current tml" categoryId="org.eclipse.ui.category.views"/>
		<command id="com.dexels.plugin.command.java" name="Java" description="Show java" categoryId="org.eclipse.ui.category.views"/>
		<command id="com.dexels.plugin.command.recompile" name="Recompile" description="Recompile" categoryId="org.eclipse.ui.category.views"/>
		<command id="com.dexels.plugin.command.tml" name="Tml" description="Tml" categoryId="org.eclipse.ui.category.views"/>

		<command id="com.dexels.plugin.command.forward" name="Forward" description="Forward" categoryId="org.eclipse.ui.category.views"/>
		<command id="com.dexels.plugin.command.back" name="Back" description="Back" categoryId="org.eclipse.ui.category.views"/>
		<!--=
		<keyBinding string="Shift+F7" command="com.dexels.plugin.command.reload" configuration="org.eclipse.ui.defaultAcceleratorConfiguration"/>
	    <keyBinding string="Shift+F6" command="com.dexels.plugin.command.socket" configuration="org.eclipse.ui.defaultAcceleratorConfiguration"/>
	    <keyBinding string="Ctrl+U" command="com.dexels.plugin.command.java" configuration="org.eclipse.ui.defaultAcceleratorConfiguration"/>
	    <keyBinding string="Ctrl+R" command="com.dexels.plugin.command.recompile" configuration="org.eclipse.ui.defaultAcceleratorConfiguration"/>
	    <keyBinding string="Ctrl+T" command="com.dexels.plugin.command.tml" configuration="org.eclipse.ui.defaultAcceleratorConfiguration"/>
	-->

	<!--
	Editor commands:
		Show java
		Show script
		Show tml
		Run init / Refresh
		(Re)start socketrunner
		
	Generic commands:
		Show view: TML Browser
		Show view: Metadata
			

-->
</extension>

	<extension point="org.eclipse.ui.bindings">
		 <key sequence="F5" commandId="com.dexels.plugin.command.reload" schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" contextId="com.dexels.navajoContext" />
	</extension>
	<extension point="org.eclipse.ui.bindings">
		 <key sequence="Ctrl+ARROW_LEFT" commandId="com.dexels.plugin.command.back" schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" contextId="com.dexels.navajoContext" />
	</extension>
	<extension point="org.eclipse.ui.bindings">
		 <key sequence="Ctrl+ARROW_RIGHT" commandId="com.dexels.plugin.command.forward" schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" contextId="com.dexels.navajoContext" />
	</extension>
	<extension point="org.eclipse.ui.bindings">
		 <key sequence="Shift+F7" commandId="com.dexels.plugin.command.recompile" schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" contextId="com.dexels.navajoContext" />
	</extension>
	
